{
    "name": "name-util",
    "version": "1.0.0",
    "description": "A utility for managing names",
    "main": "dist/index.js",
    "scripts": {
        "tsc": "node_modules/typescript/bin/tsc",
        "build": "npm run clean && npm run tsc --",
        "tslint": "tslint",
        "lint": "tslint src/**/*.ts",
        "watch": "npm run clean && npm run tsc -- -w",
        "start": "npm run watch",
        "clean": "rimraf dist",
        "test": "mocha test",
        "test:watch": "npm run test -- -w"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rintoj/name-util.git"
    },
    "devDependencies": {
        "chai": "^3.5.0",
        "mocha": "^3.1.2",
        "rimraf": "^2.5.4",
        "tslint": "3.15.1",
        "typescript": "2.0.6"
    },
    "keywords": [
        "Name",
        "Utility",
        "TypeScript"
    ],
    "author": "Rinto Jose",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rintoj/name-util/issues"
    },
    "homepage": "https://github.com/rintoj/name-util#readme"
}